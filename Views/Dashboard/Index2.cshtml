@model List<SignalRDemo3ytEFC.Models.Product>

@{
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Price</td>
                <td><a href="View/@product.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $("#btnPdf2").click(function () {
        window.open("../Home/PrintProduct?param=1", "_blank");
    });
</script>